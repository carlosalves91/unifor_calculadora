import java.util.Scanner; 
import util.Calculadora;

public class Calcular_IMC {
    public static void main(String [] args){
        Calculadora calculadora = new Calculadora();

        java.util.Scanner scanner = new Scanner(System.in);

        double peso;
        
        double altura;

        System.out.println("Por favor, digite o seu peso em KGs.");
        peso = scanner.nextDouble();

        System.out.println("Por favor, digite a sua altura em metros");
        altura = scanner.nextDouble();

        scanner.nextLine();

        double alturaaoquadrado = Calculadora.exponenciacao (altura);
        
        double IMC = Calculadora.divisao(peso,alturaaoquadrado)

        System.out.println("O cálculo do seu índice de massa corporal é: " IMC);
        
        scanner.close(); 
        
    }
}